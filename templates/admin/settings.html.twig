{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Einstellungen{% endblock %}

{% block page_content %}
    <div class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Einstellungen</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-12">
                                    {{ form_row(form.imprint) }}
                                </div>
                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-12">
                                    {{ form_row(form.imprint_mail) }}
                                </div>
                            </div>
                            
                            <hr/>
                            <div class="row mt-3">
                                <div class="col-12">
                                    {{ form_row(form.save) }}
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}